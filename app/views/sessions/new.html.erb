<h1>Sign in</h1>

<%= form_tag sessions_path, class: 'form' do %>

  <div class="group">
    <%= label_tag :email, 'Email', class: 'label' %>
    <%= email_field_tag :email, params[:email], class: 'input' %>
  </div>

  <div class="group">
    <%= label_tag :password, 'Password', class: 'label' %>
    <%= password_field_tag :password, nil, class: 'input' %>
  </div>

  <div class="group">
    <%= submit_tag 'Sign in', class: 'button primary' %>
  </div>

<% end %>