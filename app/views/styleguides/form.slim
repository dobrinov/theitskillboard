form class="form"
  h1 class="form__title" Profile picture

  div class="form__content"
    div class="row"
      div class="form__group grid_12"
        label class="form__label" Profile picture
        input type="file" class="input_block"

  div class="form__actions"
    div class="row"
      div class="form__group_actions grid_12"
        input type="submit" value="Upload" class="button button_primary button_large form__action_proceed"
        a href="#" class="button form__action_cancel" Cancel

