<%= link_to edit_profile_path(:section => 'profilepictureandname'),
            class: 'profile-details profile-picture-and-name container-editable' do %>
  <%= image_tag @profile.profile_picture.url(:small), class: 'profile-picture' %>
  <h1 class="name"><%= @profile.full_name %></h1>
  <span class="edit button primary large right">Edit</span>
<% end %>

<h2>General information</h2>
<%= link_to edit_profile_path(:section => 'generalinformation'), class: 'profile-details general-information container-editable no-results' do %>
  <% if @profile.general_information_added? %>
    <%= @profile.birth_date %>
    <%= @profile.country %>
    <%= @profile.city %>
    <%= @profile.nationality %>
  <% else %>
    <span class="message">No general information</span>
    <span class="hint">Click to edit</span>
  <% end %>

  <span class="edit button primary large right">Edit</span>
<% end %>

<h2>IT skills</h2>
<div class="profile-details it-skills container no-results">
  <span class="message">No IT skills</span>
  <span class="hint">Update your experience and this will be generated automatically</span>
