<%= form_for current_user.profile, html: { class: 'form container' } do |f| %>
  <h1>Edit general information</h1>

  <%= hidden_field_tag :section, 'generalinformation' %>

  <div class="group">
    <%= f.label       :birth_date, class: 'label' %>
    <%= f.date_select :birth_date, order: [:day, :month, :year],
                      include_blank: true,
                      start_year: Time.now.year - 50, end_year: Time.now.year - 16, class: 'input' %>
    <%= error_messages_for(current_user.profile, :birth_date) %>
  </div>

  <div class="group">
    <%= f.label      :country, class: 'label' %>
    <%= f.text_field :country, class: 'input' %>
    <%= error_messages_for(current_user.profile, :country) %>
  </div>

  <div class="group">
    <%= f.label      :city, class: 'label' %>
    <%= f.text_field :city, class: 'input' %>
    <%= error_messages_for(current_user.profile, :city) %>
  </div>

  <div class="group">
    <%= f.label      :nationality, class: 'label' %>
    <%= f.text_field :nationality, class: 'input' %>
    <%= error_messages_for(current_user.profile, :nationality) %>
  </div>


  <%= f.submit 'Save', class: 'button primary' %>

  <%= link_to 'Cancel', edit_profile_path(current_user), class: 'button' %>
<% end %>