      }(document, 'script', 'facebook-jssdk'));

  span class="site-present__twitter-share"
    a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.theitskillboard.com" data-text="The IT skill board - Creative resumes for software developers." Tweet
