<h3>Add new project</h3>

<%= form_for [:profile, target, Project.new] do |f| %>

  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <%= f.label :description, 'Description' %>
  <%= f.text_field :description %>

  <%= f.label :website, 'Website' %>
  <%= f.text_field :website %>

  <%= f.submit 'Add project', class: 'button primary' %>
  <%= link_to 'Cancel', profile_employments_path, class: 'button' %>
<% end %>