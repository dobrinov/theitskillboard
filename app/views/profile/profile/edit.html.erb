<%= link_to profile_edit_profile_picture_and_name_path,
            class: 'profile-details profile-picture-and-name container-editable' do %>
  <%= image_tag current_user.profile.profile_picture.url(:small), class: 'profile-picture' %>
  <h1 class="name"><%= current_user.profile.full_name %></h1>
  <span class="edit button primary large right">Edit</span>
<% end %>

<h2>General information</h2>
<%= link_to profile_edit_location_nationality_and_age_path, class: 'profile-details general-information container-editable no-results' do %>
  <% if current_user.profile.general_information_added? %>
    <%= current_user.profile.birth_date %>
    <%= current_user.profile.country %>
    <%= current_user.profile.city %>
    <%= current_user.profile.nationality %>
  <% else %>
    <span class="message">No general information</span>
    <span class="hint">Click to edit</span>
  <% end %>

  <span class="edit button primary large right">Edit</span>
<% end %>

<h2>IT skills</h2>
<div class="profile-details it-skills container no-results">
  <% if @skills.any? %>
    <ul>
      <% @skills.each do |skill| %>
        <li>
          <%= skill.name %> =
          <%= current_user.professional_experience_in_days_for(skill) %> professional exp +
          <%= current_user.theoretical_experience_in_days_for(skill) %> theoretical exp +
          ? course works
        </li>
      <% end %>
    </ul>
  <% else %>
    <span class="message">No IT skills</span>
    <span class="hint">Update your experience and this will be generated automatically</span>
  <% end %>
</div>

<h2>Language skills</h2>
<div class="profile-details language-skills container no-results">
  <span class="message">No language skills</span>
  <span class="hint">Update your experience experience and this will be generated automatically</span>
</div>

<h2>Education</h2>
<%= link_to profile_studies_path, class: 'profile-details experience container-editable no-results' do %>
