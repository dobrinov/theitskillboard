<%= form_for [:profile, current_user.profile], url: profile_path, html: { :multipart => true, class: 'form container' } do |f| %>
  <h1>Edit profile picture and name</h1>

  <div class="group">
    <%= f.label      :profile_picture, class: 'label' %>
    <%= f.file_field :profile_picture, class: 'input' %>
    <%= error_messages_for(current_user.profile, :profile_picture) %>
  </div>

  <div class="group">
    <%= f.label      :name, 'Name', class: 'label' %>
    <%= f.text_field :name,         class: 'input' %>
    <%= error_messages_for(current_user.profile, :name) %>
  </div>

  <div class="group">
    <%= f.label      :surname, 'Surname', class: 'label' %>
    <%= f.text_field :surname,            class: 'input' %>
    <%= error_messages_for(current_user.profile, :surname) %>
  </div>

  <%= f.submit 'Save', class: 'button primary' %>

  <%= link_to 'Cancel', profile_edit_path, class: 'button' %>
<% end %>