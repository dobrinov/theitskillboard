<div class="container">
  <h1>Edit interests</h1>

  <% if @interests.any? %>
    <h2>Interests</h2>

    <% @interests.each do |interest| %>
      <div>
        <%= form_for [@profile, interest], method: 'delete', html: { class: 'form' } do |f| %>
          <%= interest.name %>
          <%= f.hidden_field :id, :value => interest.id %>
          <%= f.submit 'Delete', class: 'button small' %>
        <% end %>
      </div>
    <% end %>
  <% end %>


  <h2>Add new interest</h2>
  <%= form_for [@profile, @interest], html: { class: 'form' } do |f| %>
    <div class="group">
      <%= f.label      :name, 'Interest', class: 'label' %>
      <%= f.text_field :name, class: 'input' %>
      <%= error_messages_for(@interest, :name) %>
    </div>

    <%= f.submit 'Add interest', class: 'button' %>
  <% end %>

  <br/>

  <%= link_to 'Done', edit_profile_path(current_user), class: 'button primary' %>
</div>